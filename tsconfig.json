{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "outDir": "./public/dist/js",
        "rootDir": "./public/src/ts",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "noEmit": false,
        "allowImportingTsExtensions": false,
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "include": [
        "public/src/ts/**/*"
    ]
}